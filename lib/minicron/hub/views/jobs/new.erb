<header>
  <h2>Add New Job</h2>
</header>
<hr/>

<form class="form-horizontal" role="form" method="POST">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input name="name" type="text" value="<%= @previous[:name] %>"class="form-control" placeholder="A nickname for the job"/>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Command</label>
    <div class="col-sm-10">
      <input name="command" type="text" value="<%= @previous[:command] %>"class="form-control" placeholder="What the job actually does"/>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Host</label>
    <div class="col-sm-10">
      <select name="host" class="form-control">
        <option value="0">--- Select Host ---</option>
        <% @hosts.each do |host| %>
          <option <%= "selected " if host.id == @previous[:host] %>value="<%= host.id %>"><%= host.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" class="btn btn-success" value="Save"/>
      <a href="<%= "#{route_prefix}/jobs" %>" class="btn btn-danger">Cancel</a>
    </div>
  </div>
</form>
