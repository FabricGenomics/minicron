<header>
  <h2>Delete Execution #<%= @execution.number %> for Job '<%= @execution.job.name %>'?</h2>
</header>
<hr/>

<% if @error %>
  <div class="alert alert-danger" role="alert"><%= @error %></div>
<% end %>

<form class="form-horizontal" role="form" method="POST">
  <input type="submit" class="btn btn-danger" value="Delete Execution"/>
  <a href="<%= "#{route_prefix}/execution/#{@execution.id}" %>" class="btn btn-info">Cancel</a>
</form>
